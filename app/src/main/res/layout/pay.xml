<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cbCheckItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="414dp"
            android:layout_height="191dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/img"
                tools:ignore="MissingConstraints">

            </ImageView>

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="53dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/baseline_delete_24" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvTenTruyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Tên Truyện"
                android:textColor="@color/chocolate"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvngaythue"
                android:layout_width="67dp"
                android:layout_height="23dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toBottomOf="@+id/tvTenTruyen" />

            <CheckBox
                android:id="@+id/cbcheckitem"
                android:layout_width="113dp"
                android:layout_height="84dp"
                android:layout_marginStart="206dp"
                android:layout_marginTop="49dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toBottomOf="@+id/imgDelete"
                app:layout_constraintVertical_bias="1.0" />

            <Spinner
                android:id="@+id/spngaythue"
                android:layout_width="131dp"
                android:layout_height="53dp"
                android:layout_marginStart="32dp"
                android:entries="@array/data2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.934"
                app:layout_constraintStart_toEndOf="@+id/tvngaythue"
                app:layout_constraintTop_toBottomOf="@+id/imgDelete"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvGiaTien"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="60dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="60dp"
                android:text="Giá Tiền:"
                android:textColor="@color/chocolate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgEdit" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

